<style>
  .list > .item {
    transition:
      scale 200ms,
      translate 200ms;
  }
  .list > .item:hover {
    scale: 1.3;
  }
  .list > .item:has(~ .item:hover) {
    translate: -1.5rem;
  }
  .list > .item:hover ~ .item {
    translate: 1.5rem;
  }
  .list > .item:has(+ .item:hover),
  .list > .item:hover + .item {
    scale: 1.1;
  }
</style>
