---
import { Image } from "astro:assets";
import heartbeat from "../content/posts/images/heartbeat.png";

const userEmail = Astro.cookies.get("userEmail");
---

<header
  class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto">
  <a class="flex items-center gap-x-4" href="/">
    <Image class="w-16" src={heartbeat} width={96} height={96} alt="logo" />
    <p class="uppercase text-3xl text-zinc-900">Blog</p>
  </a>

  {
    userEmail?.value ? (
      <a
        href="/logout"
        class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl">
        Logout
      </a>
    ) : (
      <a
        href="/login"
        class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl">
        Login
      </a>
    )
  }
</header>
