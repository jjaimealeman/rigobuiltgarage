---
import type { CollectionEntry } from 'astro:content';
import Category from './Category.astro';
type Props = {
  categories: CollectionEntry<'posts'>['data']['categories'];
  title?: string;
};

const { categories, title } = Astro.props;
---

<div class="grid grid-cols-[auto,1fr] gap-x-0 gap-y-3 mb-8 max-lg:grid-cols-1">
  {title && <h2 class="font-bold text-5xl text-zinc-700">{title}</h2>}

  <div class="flex gap-4 flex-wrap items-center justify-end">
    {categories.map((category: string) => <Category category={category} />)}
  </div>
</div>
